<div class="container log col-md-offset-2 col-md-8 col-sm-offset-1 col-sm-10 col-xs-offset-1 col-xs-10">   
    <% flash.each do |key, value| %>
      <%= content_tag(:div, value, class: "#{key} alert alert-info") %>
    <% end %>
 <div class="right-content">   
    <h2>ログイン</h2>
      <%= form_with(scope: :session, url: sessions_path, local: true) do |f| %>
        <div class="form-group">
          <%= f.label :email %> 
          <%= f.email_field :email, class:"form-control" %>
        </div>
        <div class="form-group">
          <%= f.label :password %> 
          <%= f.password_field :password, class:"form-control" %>
        </div>
          <%= f.submit "ログイン", class: "btn btn-primary" %>
      <% end %>  
 </div> 
</div>