<div class="container log col-md-offset-2 col-md-8 col-sm-offset-1 col-sm-10 col-xs-offset-1 col-xs-10">   
<p><%= notice %></p>
  
   <div class="right-content"> 
     <h2><%= @blog.title %></h2>
     <p><%= @blog.content%></p>　
     <ul class="button">
        <li><%= link_to "編集" , edit_blog_path(@blog.id), class: "btn btn-outline-primary"%></li> 
        <li><%= link_to"削除", blog_path(@blog.id), method: :delete, data: {confirm: '本当に削除していいですか'},  class: "btn btn-outline-danger"%></li>
      </ul> 
   </div> 
</div>
