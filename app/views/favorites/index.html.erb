<div class="container log col-md-offset-2 col-md-8 col-sm-offset-1 col-sm-10 col-xs-offset-1 col-xs-10">   
　
 <% if @favorite_blogs.present? %>
 <% @favorite_blogs.each do |favorite_blogs| %>
   <div class="right-content mt-5">  
     <h2><%= favorite_blogs.title %></h2>
     <p><%= link_to favorite_blogs.content, blog_path(favorite_blogs.id) %></p> 
   </div> 
　<% end %>  

 <% else %> 
   <h2 class="shadow mt-5">お気に入りはまだありません。</h2>
  
 <% end %> 
</div>